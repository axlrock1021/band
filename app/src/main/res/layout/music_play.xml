<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black3"
    tools:context=".Music_Play.Music_Play">

    <TextView
        android:id="@+id/main_textview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="我的音樂"
        android:textColor="@color/cardview_light_background"
        android:textColorLink="@color/cardview_light_background" />

    <ListView
        android:id="@+id/main_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_textview" />

    <RelativeLayout
        android:id="@+id/main_control_rl"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"

        android:visibility="invisible">


        <TextView
            android:id="@+id/control_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"

            android:text="歌手名"
            android:textColor="@color/cardview_light_background"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/control_song"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/control_singer"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="歌曲"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/playing_btn_previous"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"

                android:onClick="control" />

            <Button
                android:id="@+id/playing_btn_pause"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/play_press"
                android:onClick="control"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/playing_btn_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"

                android:onClick="control" />

        </RelativeLayout>
    </RelativeLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sbSize"
        android:max="50"
        android:progress="16" />

</RelativeLayout>
